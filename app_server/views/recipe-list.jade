include _includes/sharedHTMLfunctions

extends layout

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}

  .row.list-group
    each recipe in recipes
      .col-xs-12.list-group-item
        h4
          a(href="/recipe")= recipe.name
          small &nbsp;
           +outputRating(recipe.rating)
          span.badge.pull-right.badge-default tradizionale
        p.address= recipe.description
        p
          each tag in recipe.tags
            span.label.label-warning= tag
            &nbsp;
